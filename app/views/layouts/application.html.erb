  <!DOCTYPE html>
    <html>
      <head>
        <title>Grit</title>
        <script src="https://kit.fontawesome.com/7a8e38781f.js" crossorigin="anonymous"></script>
        <%= csrf_meta_tags %>
        <%= csp_meta_tag %>
        <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
        <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
      </head>

      <body>

        <nav class="navbar navbar-inverse">
          <div class="container-fluid">

            <div class="navbar-header">
              <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbarEexample7">
                <span class="sr-only">Toggle navigation</span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
              </button>
                  <% if admin_signed_in? %>
                    <%= link_to 'TOP', admin_top_path,class: "navbar-brand"  %>
                  <% elsif user_signed_in? %>
                    <%= link_to 'GRIT', top_path,class: "navbar-brand"  %>
                  <% else %>
                    <%= link_to 'GRIT', top_path,class: "navbar-brand"  %>
                  <% end %>
            </div>

           <header>
            <div class="collapse navbar-collapse navbar-right" id="navbarEexample7">
              <ul class="nav navbar-nav">
                  <% if admin_signed_in? %>
                      <li class="nav_list_item">
                          <%= link_to 'ユーザー一覧', admin_users_path,　method: :delete %>
                      </li>
                      <li class="nav_list_item">
                          <%= link_to '体験談一覧', admin_experiences_path,　method: :delete %>
                      </li>
                      <li class="nav_list_item">
                          <%= link_to '悩み一覧', admin_problems_path,　method: :delete %>
                      </li>
                      <li class="nav_list_item">
                          <%= link_to 'ログアウト', admins_sign_out_path,　method: :delete %>
                      </li>

                  <% elsif user_signed_in? %>
                      <li class="nav_list_item">
                          <%= link_to 'TOP', top_path  %>
                      </li>
                      <li class="nav_list_item">
                          <%= link_to 'マイページ', user_user_path(current_user.id)  %>
                      </li>
                      <li class="nav_list_item">
                          <%= link_to '経験談一覧', experiences_path  %>
                      </li>
                      <li class="nav_list_item">
                          <%= link_to '悩み一覧', problems_path %>
                      </li>
                      <li class="nav_list_item">
                          <%= link_to 'ログアウト', users_sign_out_path,　method: :delete %>
                      </li>
                <% else %>
                      <li class="nav_list_item">
                          <%= link_to 'TOP', top_path  %>
                      </li>
                      <li class="nav_list_item">
                          <%= link_to '経験談一覧', experiences_path  %>
                      </li>
                      <li class="nav_list_item">
                          <%= link_to '悩み一覧', problems_path %>
                      </li>
                      <li class="nav_list_item">
                          <%= link_to '管理者のログイン', new_admin_session_path %>
                      </li>
                      <li class="nav_list_item">
                          <%= link_to 'ログイン', users_sign_in_path %>
                      </li>
                      <li class="nav_list_item">
                          <%= link_to '新規登録', new_user_registration_path %>
                      </li>
                <% end %>
              </ul>
            </div>
           </header>
          </div>
        </nav>
        <div class="container">
          <div class="row">
            <%= yield %>
          </div>
        </div>
            <footer style="background-color: black">
              <div id="container-fluid">
                <div style="padding-top: 10px;">
                    <p style="font-color: white; margin-top: 40px;">Copyright (c) 2019</p>
                </div>
              </div>
            </footer>
      </body>
    </html>