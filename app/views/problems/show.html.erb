<h2>悩み相談詳細</h2>

<ul>
	<li><%= @problem.title %></li>
	<li><%= @problem.genre %></li>
	<li><%= @problem.body %></li>
<%= link_to '一覧', problems_path %>
<%= link_to '編集', edit_problem_path(@problem) %>
</ul>

<br>
<%= @problem.comments.count %>
<h3><%= @problem.comments.count %>件のコメント</h3>

<ol>
	<% @problem.comments.each do |comment| %>
	<%= comment.user.name %><br>
	<%= comment.created_at.strftime('%Y/%m/%d') %><br>
	<%= comment.comment %><br>
	<% end %>
</ol>


<%= form_for [@problem, @comment] do |f| %>
	<%= f.text_area :comment, rows:'5', placeholder: "コメント" %>
	<%= f.submit "投稿する" %>
<% end %>